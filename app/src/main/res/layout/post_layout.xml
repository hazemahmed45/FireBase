<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_post_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoSizeMaxTextSize="@android:dimen/app_icon_size"
        android:text="Auther"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/iv_poster_image"
        android:layout_toRightOf="@+id/iv_poster_image"
        android:layout_toEndOf="@+id/iv_poster_image" />

    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:layout_margin="12dp"
        android:id="@+id/iv_poster_image" />

    <ImageView
        android:id="@+id/iv_post_star"
        android:layout_width="wrap_content"
        android:elevation="4dp"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/btn_star_big_off"
        android:layout_above="@+id/tv_post_title"
        android:layout_alignRight="@+id/tv_post_title"
        android:layout_alignEnd="@+id/tv_post_title"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/post_likes"
        android:textColor="@color/gold"
        android:text="11"
        android:elevation="4dp"
        android:textAlignment="center"
        android:layout_alignBaseline="@+id/tv_post_author"
        android:layout_alignBottom="@+id/tv_post_author"
        android:layout_alignRight="@+id/tv_post_title"
        android:layout_alignEnd="@+id/tv_post_title" />
    <TextView
        android:id="@+id/tv_post_title"
        android:layout_width="match_parent"
        android:layout_below="@id/tv_post_author"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:text="title"
        android:textSize="18sp"
        android:textStyle="bold" />
    <TextView
        android:layout_below="@id/tv_post_title"
        android:text="content"
        android:id="@+id/tv_post_content"
        android:layout_margin="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>